            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/sum_empty"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_round3"
            app:layout_constraintBottom_toBottomOf="@id/text_round3"/>

        <TextView
            android:id="@+id/text_round4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/pick_range4"
            android:textSize="15sp"
            android:textColor="@color/darkGray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_round3"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/progress4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/text_round4"
            app:layout_constraintRight_toLeftOf="@id/text_sum4"
            app:layout_constraintTop_toTopOf="@id/text_round4"
            app:layout_constraintBottom_toBottomOf="@id/text_round4"/>

        <TextView
            android:id="@+id/text_sum4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
