            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/pick_range5"
            android:textSize="15sp"
            android:textColor="@color/darkGray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_unpick_round4"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_unpick5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/text_unpick_round5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_unpick_round5"
            app:layout_constraintBottom_toBottomOf="@id/text_unpick_round5"/>
